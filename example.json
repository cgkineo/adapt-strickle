// To go in the article.json/block.json file
//enables trickle on the page

//TRICKLE STYLE BUTTON
"_strickle": {
    "_isEnabled":true,
    "button": "Continue to next section.",
    "_buttonType": "trickle",
    "_scrollTo": "@block +1",
    "_duration": 500,
    "_autoScroll": true
}

//INLINE BUTTON, USE AS SCROLL TO ON SUBSEQUENT CLICKS
"_strickle": {
    "_isEnabled":true,
    "button": "Continue to next section.",
    "_buttonType": "inline-jump",
    "_scrollTo": "@block +1",
    "_duration": 500,
    "_autoScroll": true
}

//INLINE BUTTON, USE AS SCROLL TO ALWAYS (NO STEP LOCKING)
"_strickle": {
    "_isEnabled":true,
    "button": "Continue to next section.",
    "_buttonType": "jump",
    "_scrollTo": "@block +1",
    "_duration": 500,
    "_autoScroll": true
}

//INLINE BUTTON DISABLED ON CLICK
"_strickle": {
    "_isEnabled":true,
    "button": "Continue to next section.",
    "_buttonType": "inline-disable",
    "_scrollTo": "@block +1",
    "_duration": 500,
    "_autoScroll": true
}

//INLINE BUTTON HIDDEN ON CLICK
"_strickle": {
    "_isEnabled":true,
    "button": "Continue to next section.",
    "_buttonType": "inline-hide",
    "_scrollTo": "@block +1",
    "_duration": 500,
    "_autoScroll": true
}


//NO BUTTON
"_strickle": {
    "_isEnabled":true,
    "_scrollTo": "@block +1",
    "_duration": 500,
    "_autoScroll": true
}


//ADDITIONAL MODIFICATIONS
"_strickle": {
    "_componentClasses": "class1 class2",
    "_buttonClasses": "class3 class4"
}


_scrollTo Examples:

"@block +2" > scroll to current block + 1
"@article +2" > scroll to current article + 2
".b-25" > scroll to block b-25
"b-25" > scroll to block b-25





